{
  "plugins": {
    "postcss-preset-env": {
      "stage": 0,
      "features": {
        "nesting-rules": true,
        "custom-media-queries": true,
        "color-functional-notation": true,
        "focus-visible-pseudo-class": true,
        "container-queries": true
      }
    },
    "autoprefixer": {
      "overrideBrowserslist": ["> 1%", "last 2 versions", "not dead"]
    },
    "cssnano": {
      "preset": [
        "advanced",
        {
          "discardComments": { "removeAll": true }
        }
      ]
    }
  }
}
