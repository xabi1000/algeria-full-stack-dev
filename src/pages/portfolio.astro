---
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/portfolio.json';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portafolio Algeria Full-Stack .Dev">
  <header class="hero">
    <h1>Nuestro Trabajo Habla por Nosotros</h1>
    <p>
      Explora algunos de los proyectos que hemos desarrollado para nuestros
      clientes.
    </p>
  </header>

  <section class="projects-grid">
    {projects.map((project) => <ProjectCard {...project} />)}
  </section>

  <section class="cta">
    <h2>¿Tienes un proyecto en mente?</h2>
    <a href="/contact" class="cta-button">¡Contáctanos!</a>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 1rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--gap);
    padding: var(--gap);
  }
  .testimonials {
    text-align: center;
    padding: var(--gap);
  }
  .testimonial {
    margin: 1rem 0;
  }
  .cta {
    text-align: center;
    padding: var(--gap);
    background-color: #0070f3;
    color: white;
  }
  .cta-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: white;
    color: #0070f3;
    text-decoration: none;
    border-radius: 4px;
  }
</style>
