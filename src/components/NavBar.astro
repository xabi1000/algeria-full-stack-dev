---
import { LINKS, ICONS } from '../data/nav.json';
import Icon from './Icon.astro';
---

<div class="contenedor-menu">
  <!-- Input para controlar el estado del menú -->
  <input
    type="checkbox"
    class="interruptor-menu"
    id="interruptor-menu"
    aria-label="Alternar menú"
    aria-expanded="false"
  />

  <!-- Botón de hamburguesa -->
  <label for="interruptor-menu" class="boton-hamburguesa" aria-hidden="true">
    <div></div>
  </label>

  <!-- Menú de navegación -->
  <div class="menu" role="navigation">
    <div class="contenido-menu">
      <div class="lista-menu">
        <ul role="menu">
          {
            LINKS.map((link, index) => (
              <li role="menuitem">
                <a href={link.url}>
                  {link.name}
                  <Icon name={link.icon} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --color-overlay: rgba(24, 39, 51, 0.85);
    --velocidad-menu: 0.75s;
    --animacion: cubic-bezier(0.4, 0, 0.2, 1);
    --dimension-boton: clamp(3rem, 7vw, 4rem);
    --tamano-fuente-mediano: 1.25rem;
  }

  .contenedor-menu {
    position: fixed;
    inset: auto 1rem 1.5rem auto;
    z-index: 1;
    width: var(--dimension-boton);
    height: var(--dimension-boton);
  }

  .contenedor-menu .interruptor-menu {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
    width: var(--dimension-boton);
    height: var(--dimension-boton);
    opacity: 0;
    cursor: pointer;
  }

  .contenedor-menu .boton-hamburguesa {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: var(--dimension-boton);
    height: var(--dimension-boton);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    backdrop-filter: blur(15px);
    background-color: #2502287d;
  }

  .contenedor-menu .boton-hamburguesa > div {
    position: relative;
    flex: none;
    width: 77%;
    height: 2px;
    background-color: var(--accent-color);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s var(--animacion);
  }

  .contenedor-menu .boton-hamburguesa > div::before,
  .contenedor-menu .boton-hamburguesa > div::after {
    content: '';
    position: absolute;
    z-index: 1;
    top: -0.7rem;
    width: 100%;
    height: 2px;
    background: inherit;
  }

  .contenedor-menu .boton-hamburguesa > div::after {
    top: 0.7rem;
  }

  .contenedor-menu .interruptor-menu:checked + .boton-hamburguesa > div {
    transform: rotate(135deg);
  }

  .contenedor-menu .interruptor-menu:checked + .boton-hamburguesa > div::before,
  .contenedor-menu .interruptor-menu:checked + .boton-hamburguesa > div::after {
    top: 0;
    transform: rotate(90deg);
  }

  .contenedor-menu .interruptor-menu:checked:hover + .boton-hamburguesa > div {
    transform: rotate(225deg);
  }

  .contenedor-menu .interruptor-menu:checked ~ .menu {
    visibility: visible;
  }

  .contenedor-menu .interruptor-menu:checked ~ .menu > .contenido-menu {
    transform: scale(1);
    transition-duration: var(--velocidad-menu);
  }

  .contenedor-menu
    .interruptor-menu:checked
    ~ .menu
    > .contenido-menu
    > .lista-menu {
    opacity: 1;
    transition: opacity 0.4s var(--animacion) 0.4s;
  }

  .contenedor-menu .menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    visibility: hidden;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-menu .menu > .contenido-menu {
    backdrop-filter: blur(6px);
    background-color: #00ffff05;
    border-radius: 50%;
    width: 65vw;
    height: 65vw;
    display: flex;
    flex: none;
    align-items: center;
    justify-content: center;
    transform: scale(0);
    transition: all var(--velocidad-menu) var(--animacion);
  }

  .contenedor-menu .menu > .contenido-menu > .lista-menu {
    text-align: center;
    max-width: 90dvw;
    max-height: 100dvh;
    opacity: 0;
    transition: opacity 0.4s var(--animacion);
  }

  .contenedor-menu .menu > .contenido-menu > .lista-menu > ul > li {
    list-style: none;
    color: var(--text-color);
    font-size: var(--tamano-fuente-mediano);
    padding: 1rem;
  }

  .contenedor-menu .menu > .contenido-menu > .lista-menu > ul > li > a {
    color: inherit;
    text-decoration: none;
    transition: color 0.4s var(--animacion);
  }

  .contenedor-menu .menu > .contenido-menu > .lista-menu > ul > li > a:hover {
    color: var(--primary-color);
  }

  .contenedor-menu .menu > .contenido-menu > .lista-menu > ul > li > a:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 4px;
  }

  @media (width <= 768px) {
    .contenedor-menu .menu > .contenido-menu {
      width: 150vw;
      height: 150vw;
    }

    .contenedor-menu .menu > .contenido-menu > .lista-menu > ul > li {
      padding: 0.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggler = document.querySelector('.toggler') as HTMLInputElement;

    // Cerrar menú al hacer clic fuera o seleccionar un enlace
    document.addEventListener('click', (e) => {
      const target = e.target as Element;

      // Verificar si el clic fue fuera del menú o en un enlace del menú
      if (!target?.closest('.menu') && !target.closest('.toggler')) {
        toggler.checked = false;
        toggler.setAttribute('aria-expanded', 'false');
      } else if (target.closest('.menu a')) {
        toggler.checked = false;
        toggler.setAttribute('aria-expanded', 'false');
      }
    });

    // Actualizar aria-expanded cuando el menú se abre/cierra
    toggler.addEventListener('change', () => {
      toggler.setAttribute('aria-expanded', String(toggler.checked));
    });
  });
</script>
